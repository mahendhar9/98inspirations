 <section class="user-forms">
  <div class="container">
    <div class="form-height">
      <div class="vcenter">
        <div class="row">
          <div class="col-md-3">            
          </div>

          <div class="col-md-6">
            <div class="form-border">
              <h3 class="text-center">Sign Up</h3>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
              <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name" %>
                <%= f.input :email, required: true, label: false, placeholder: "Email" %>
                <%= f.input :password, required: true, label: false, placeholder: "Password (8 characters minumum)" %>
                <%= f.input :password_confirmation, label: false,required: true, placeholder: "Confirm Password" %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Create Account", data: {disable_with: "Signing you up..."}, class: "btn btn-success signup-btn" %>
                <br><br>
                Already a User? 
              </div>
              <%= render "devise/shared/links" %>
              <% end %>




            </div>
          </div>
        </div>
      </div>
    </section>
