<div class="container">
  <div class="row home-row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <% @posts.each do |post| %>
      <div class="post-border text-center">
        <h2><%= link_to post.title, post_path(id: post.id)  %></h2>
        <%= link_to (image_tag post.image.url(:medium)), post %>
        <div class="row comment-like-row">
          <div class="col-md-4"></div>
          <div class="col-md-2">
            <%= link_to pluralize(post.comments.count, "Comment"), post_path(post), class: "btn btn-default" %>
          </div>
          <div class="col-md-2 like">
          <span class="btn btn-default"><%= pluralize(post.get_likes.size, "Like") %><span>
          </div>
        </div>
      </div>
      <hr>
      <% end %>
    </div>
  </div>
</div>