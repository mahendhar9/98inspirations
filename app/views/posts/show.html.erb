<section id = "post">
  <div class="container">
   <div class="row home-row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
      <h2><%= @post.title %></h2>
      <!-- # @post.link %> -->
      <p class="submitted-by"><small>[ By <%= @post.user.name %> ]</small></p>
      <p><%= link_to "Like", like_post_path(@post), class: "btn btn-success like-button" %><strong></strong>( <%= @post.get_likes.size %> )</strong></p>



      <p><%= image_tag @post.image.url(:medium) %></p>
      <p class="post-desc"><%= @post.description %></p><hr>

      <h3><%= pluralize(@post.comments.count, "Comment") %></h3>
      <% @comments.each do |comment| %>
      <p>'<%= comment.content %>' by <%= comment.user.name %></p>
      <% end %>

      <%= simple_form_for([@post, @post.comments.build]) do |f| %>
      <%= f.input :content, label: false %>
      <%= f.button :submit %>
      <% end %>

      <%# link_to 'Edit', edit_post_path(id: @post.id) %>
      <%# link_to 'Destroy', post_path(id: @post.id), method: :delete %>
    </div>
  </div>
</div>
</div>
